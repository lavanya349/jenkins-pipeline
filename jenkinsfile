pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                // Use the 'git' step to clone your repository
                // git url: 'https://github.com/your-org/your-repo.git', branch: 'main'
                sh 'echo "Step 1: Code Checked Out"' 
            }
        }
        
        stage('Build Artifact') {
            steps {
                // Use 'sh' to run the build command for your language (e.g., Java/Maven)
                // sh 'mvn clean package'
                sh 'echo "Step 2: Artifact Built"'
            }
        }
        
        stage('Run Tests') {
            steps {
                // sh 'mvn test'
                // junit 'target/surefire-reports/*.xml' // To publish results
                sh 'echo "Step 3: Tests Passed"'
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                // Requires configuring SSH keys or a dedicated deployment tool
                // sh 'scp target/app.jar user@staging:/var/app/'
                sh 'echo "Step 4: Deployment Completed"'
            }
        }
    }
    
    post {
        failure {
            echo 'Pipeline FAILED! Contact the team.'
            // mail to: 'devs@example.com', subject: 'Build FAILED'
        }
        success {
            echo 'Pipeline SUCCESSFUL! Ready for manual QA.'
        }
    }
}
